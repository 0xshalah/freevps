{
  "name": "Wazuh Development Environment",
  "image": "ubuntu:20.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "postCreateCommand": [
    "apt-get update",
    "apt-get install -y wget curl gnupg lsb-release",
    "curl -s https://packages.wazuh.com/4.x/apt/doc/keys/wazuh.asc | apt-key add -",
    "echo \"deb https://packages.wazuh.com/4.x/apt/ stable main\" > /etc/apt/sources.list.d/wazuh.list",
    "apt-get update",
    "apt-get install -y wazuh-manager wazuh-api wazuh-dashboard"
  ],
  "ports": [
    "55000",
    "5601"
  ],
  "forwardPorts": [
    55000,
    5601
  ]
}
